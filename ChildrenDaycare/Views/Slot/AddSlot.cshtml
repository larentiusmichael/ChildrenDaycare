@model ChildrenDaycare.Controllers.SlotController

@{
    ViewData["Title"] = "AddSlot";
}

<h3 class="mb-5">Add slot</h3>

<form asp-action="AddSlot" class="container py-2">
    <div  class="row shadow-sm p-4 border rounded">
        <div class="col-6">
            <h5>Slot details</h5>
            <p class="text-secondary">Fill up your slot details.</p>
        </div>
        <div class="col-6">
            <div>
                <div class="form-group mb-4">
                    <label asp-for="slot.SlotDate" class="control-label">Slot Date</label>
                    <input asp-for="slot.SlotDate" class="form-control" type="date" />
                    <span asp-validation-for="slot.SlotDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="slot.StartTime">Time</label>
                    <select asp-for="slot.StartTime" asp-items="@Model.TimeSelectList" class="form-control"></select>
                    <span asp-validation-for="slot.StartTime" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="slot.TakecareGiverID">Takecare Giver</label>
                    <select asp-for="slot.TakecareGiverID" asp-items="@Model.TakecareGiverSelectList" class="form-control"></select>
                    <span asp-validation-for="slot.TakecareGiverID" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="slot.SlotPrice" class="control-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">RM</span>
                        <input asp-for="slot.SlotPrice" class="form-control" type="number" step="0.01" />
                    </div>
                    <span asp-validation-for="slot.SlotPrice" class="text-danger"></span>
                </div>

            </div>
        </div>
    </div>
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary d-block mx-auto" />
    </div>
</form>

