@model List<ChildrenDaycare.Areas.Identity.Data.ChildrenDaycareUser>
@{
    ViewData["Title"] = "Display users";
}

<div class="container py-2">
  <h3 class="mb-5">Users</h3>
  <div class="table-responsive shadow border rounded-5 mb-5">
    <table class="table table-hover align-middle">
    <thead class="bg-light">
        <tr>
            <th scope="col">Full name</th>
            <th scope="col">User Role</th>
            <th scope="col">Email</th>
            <th scope="col">Confirmation Status</th>
            <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="py-4">@user.UserFullname</td>
                <td class="py-4">
                  <h6 class="mb-0"><span class="badge text-bg-dark">@user.userrole</span></h6>
                </td>
                <td class="py-4">@user.Email</td>
                <td class="py-4">
                  @if (user.isConfirmed)
                  {
                    <i class="bi bi-check-circle-fill fs-5 " style="color: green;"></i>
                  }
                  else
                  {
                    <i class="bi bi-x-circle-fill fs-5" style="color: red;"></i>
                  }
                </td>
                <td class="py-4">
                  <a asp-action="Profile" asp-controller="User" asp-route-UserID="@user.Id">
                    <button class="btn btn-primary btn-sm">View profile</button>
                  </a>
                </td>
            </tr>
        }
      </tbody>
    </table>
  </div>
</div>