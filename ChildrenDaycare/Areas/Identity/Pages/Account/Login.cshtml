@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="h-100 d-flex justify-content-center align-items-center">
    <div class="shadow-sm p-5 border rounded">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <div>
            <form id="account" method="post" class="mx-auto mb-3" style="width: 22rem">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <input class="form-control" asp-for="Input.Email" aria-required="true" placeholder="name@example.com" >
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Input.Password" placeholder="••••••••">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <p><small>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></small>
                    </p>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <p class="text-center mb-0"><small>Don't have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register</a></small>
            </p>
            <p class="text-center mb-0"><small>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </small>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
